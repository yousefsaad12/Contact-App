
@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortedOrderOptions.ASC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=ViewBag.ColumnName&sortOrder=@nameof(SortedOrderOptions.DESC)">@ViewBag.DisplayName</a>
        
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumName && ViewBag.CurrentSortOrder == SortedOrderOptions.DESC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortedOrderOptions.ASC)">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-sort-down"></i>
    </th>
}
else
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortedOrderOptions.ASC)">@ViewBag.DisplayName</a>
    </th>
}